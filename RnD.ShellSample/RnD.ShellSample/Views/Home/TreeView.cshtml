@{
    ViewBag.Title = "Tree View Sample";
}
<link href="@Url.Content("~/Content/jq.treeview/jquery.treeview.css")" rel="stylesheet" type="text/css" />
@*<script src="@Url.Content("~/Scripts/jq.treeview/jquery.treeview.edit.js")" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/jq.treeview/jquery.treeview.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jq.treeview/jquery.treeview.async.js")" type="text/javascript"></script>
<h2>
    Tree View Sample</h2>
<div>
    <ul id="browser">
        <li><span class="folder">Folder 1</span>
            <ul>
                <li><span class="file">Item 1.1</span></li>
            </ul>
        </li>
        <li><span class="folder">Folder 2</span>
            <ul>
                <li><span class="folder">Subfolder 2.1</span>
                    <ul id="folder21">
                        <li><span class="file">File 2.1.1</span></li>
                        <li><span class="file">File 2.1.2</span></li>
                    </ul>
                </li>
                <li><span class="file">File 2.2</span></li>
            </ul>
        </li>
        <li class="closed"><span class="folder">Folder 3 (closed at start)</span>
            <ul>
                <li><span class="file">File 3.1</span></li>
            </ul>
        </li>
        <li><span class="file">File 4</span></li>
    </ul>
    <ul id="asynLoad">
    </ul>
</div>
<script type="text/javascript">

    $(document).ready(function () {

        $("#browser").treeview();

        $("#asynLoad").treeview({
            url: '/Home/GetTreeData'
        });

    });

</script>
